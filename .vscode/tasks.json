{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build LiftOS (xcodebuild)",
			"type": "shell",
			"command": "xcodebuild build",
			"args": [
				"-project",
				"LiftOS.xcodeproj",
				"-scheme",
				"LiftOS",
				"-destination",
				"platform=iOS Simulator,name=iPhone 15"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}